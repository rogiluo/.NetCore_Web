@model List<Rogiluo.Common.Models.DataViewModel>

<style>
    th,td {
        text-align: center
    }
</style>

<h2>查詢頁面</h2>
<br />
<a class="btn btn-success" style="margin-bottom:10px" href="@Url.Action("Create", "Data")">新增</a>
<table class="table table-bordered">
    <thead>
        <tr class="info">
            <th scope="col">ID</th>
            <th scope="col">姓名</th>
            <th scope="col">性別</th>
            <th scope="col">功能</th>
        </tr>
    </thead>
    <tbody>
        @{
            if (Model.Count > 0)
            {
                foreach (var data in Model)
                {
                    <tr style="background-color:white">
                        <td>@data.Id</td>
                        <td>@data.Name</td>
                        <td>@data.Gender</td>
                        <td>
                            <a class="btn btn-primary" href="@Url.Action("Edit", "Data", new { Id = data.Id })">編輯</a>
                            <a class="btn btn-danger" onclick="Delete(@data.Id)">刪除</a>
                        </td>
                    </tr>
                }
            }
        }
    </tbody>
</table>

<script>
    function Delete(Id) {
        if (confirm("確定刪除?")) {
            $.ajax({
                type: "POST",
                url: "@Url.Action("Access", "Data")",
                data: {
                    AccessType: "Delete",
                    Id: Id
                },
                success: function () {
                    location.reload();
                }
            });
        }
    }
</script>